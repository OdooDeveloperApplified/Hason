<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_indiamart_res_config_settings" model="ir.ui.view">
        <field name="name">indiamart.api.form</field>
        <field name="model">indiamart.config.settings</field>  
        <field name="arch" type="xml">
            <form string="Indiamart API Settings">
                <header>
                    <button string="Fetch IndiaMART Leads" class="oe_highlight" type="object" name="fetch_indiamart_leads"></button>
                </header>
                <sheet> 
                    <group>
                        <field name="name"/>
                        <field name="base_url"/>
                        <field name="user_id"/>
                        <field name="profile_id"/>
                        <field name="glusr_crm_key"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <!-- <field name="cron_start_date"/>
                        <field name="cron_end_date"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_indiamart_res_config_settings_tree" model="ir.ui.view">
        <field name="name">indiamart.api.tree</field>
        <field name="model">indiamart.config.settings</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="profile_id"/>
                <field name="glusr_crm_key"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <!-- <field name="cron_start_date"/>
                <field name="cron_end_date"/> -->
            </tree>
        </field>
    </record>

    <record id="action_indiamart_api_settings" model="ir.actions.act_window">
        <field name="name">IndiaMART API</field>
        <field name="res_model">indiamart.config.settings</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage IndiaMART API Settings.
            </p>
        </field>
    </record>

    <menuitem id="menu_lead_import" name="Lead Import" parent="crm.crm_menu_root"/>

    <menuitem id="menu_indiamart_api" name="IndiaMART API" parent="hason_indiamart_api.menu_lead_import" action="action_indiamart_api_settings"/>
</odoo>
