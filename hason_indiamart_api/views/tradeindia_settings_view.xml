<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_tradeindia_res_config_settings" model="ir.ui.view">
        <field name="name">tradeindia.api.form</field>
        <field name="model">tradeindia.config.settings</field>  
        <field name="arch" type="xml">
            <form string="Trade India API Settings">
                <header>
                    <button string="Fetch TradeIndia Leads" class="oe_highlight" type="object" name="fetch_tradeindia_leads"></button>
                </header>
                <sheet> 
                    <group>
                        <field name="name"/>
                        <field name="ti_base_url"/>
                        <field name="ti_user_id"/>
                        <field name="ti_profile_id"/>
                        <field name="ti_crm_key"/>
                        <field name="ti_start_date"/>
                        <field name="ti_end_date"/>
                        <field name="ti_limit"/>
                        <field name="ti_page_no"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tradeindia_res_config_settings_tree" model="ir.ui.view">
        <field name="name">tradeindia.api.tree</field>
        <field name="model">tradeindia.config.settings</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ti_base_url"/>
                <field name="ti_user_id"/>
                <field name="ti_profile_id"/>
                <field name="ti_crm_key"/>
                <field name="ti_start_date"/>
                <field name="ti_end_date"/>
                <field name="ti_limit"/>
                <field name="ti_page_no"/>
            </tree>
        </field>
    </record>

    <record id="action_tradeindia_api_settings" model="ir.actions.act_window">
        <field name="name">Trade India API</field>
        <field name="res_model">tradeindia.config.settings</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Trade India API Settings.
            </p>
        </field>
    </record>

    <menuitem id="menu_tradeindia_api" name="Trade India API" parent="hason_indiamart_api.menu_lead_import" action="action_tradeindia_api_settings"/>
</odoo>
